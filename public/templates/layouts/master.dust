<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8" />
    <title>{+title}RTChoke {/title}</title>
    <link rel="stylesheet" href="/css/bootstrap.css" media="screen">
    <link rel="stylesheet" href="/css/bootswatch.min.css">
    <link rel="stylesheet" href="/css/theme.css">
    {+css /}
    {#showTests}
        <link rel="stylesheet" href="/vendor/mocha.css">
    {/showTests}
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="../bower_components/html5shiv/dist/html5shiv.js"></script>
    <script src="../bower_components/respond/dest/respond.min.js"></script>
    <![endif]-->
</head>
<body>
<header>
    {!<script src="js/bsa.js"></script>!}
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="/index" class="navbar-brand"><span class="primary">RT</span><span class="secondary">Choke</span></a>
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-main">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="/index">Home</a>
                    </li>
                    <li>
                        <a href="/map">My map</a>
                    </li>
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#" id="download">Account
                            <span class="caret"></span></a>
                        <ul class="dropdown-menu" aria-labelledby="download">
                            {?user}
                                <li><a tabindex="-1" href="/profile">Your profile</a></li>
                                <li><a tabindex="-1" href="/edit">Edit settings</a></li>
                                <li class="divider"></li>
                                <li><a tabindex="-1" href="/logout">Logout</a></li>
                            {/user}
                            <li><a tabindex="-1" href="/signup">Signup</a></li>

                        </ul>
                    </li>
                    <li>
                        <a href="/help">Help ?</a>
                    </li>
                </ul>
                {?user}
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="/user/profile/{user._id}">{user.email}</a></li>
                            <li class="divider"></li>
                        <form class="navbar-form navbar-right" method='put' action='/logout'>
                            <button type="submit" class="btn btn-info" name="submit-user">Log out</button>
                        </form>
                    </ul>
                {:else}
                    <ul class="nav navbar-nav navbar-right">
                        <form class="navbar-form navbar-right" method='post' action='/login'>
                            <div class="form-group">
                                <input type="text" placeholder="Email address" class="form-control" name='email'>
                            </div>
                            <div class="form-group">
                                <input type="password" placeholder="Password" class="form-control" name='password'>
                            </div>
                            <button type="submit" class="btn btn-info" name="submit-user">Sign in</button>
                        </form>
                    </ul>
                {/user}
            </div>
        </div>
    </div>
</header>
<section id="content">
    {+body /}
</section>
{#showTests}
    <div id="mocha"></div>
    <script src="/vendor/mocha.js"></script>
    <script src="/vendor/chai.js"></script>
    <script>
        mocha.ui('tdd');
        var assert = chai.assert;
    </script>
    <script src="/tests/tests-global.js"></script>
    {?pageTestScript}
    <script src="{pageTestScript}"></script>
    {/pageTestScript}
    <script>mocha.run();</script>
{/showTests}

<footer class="container">
    <hr>
    <ul class="list-unstyled">
        <li class="pull-right"><a href="#top">Back to top</a></li>
        <li><a href="#">Blog</a></li>
        <li><a href="#">Twitter</a></li>
        <li><a href="#">Support</a></li>
    </ul>
    <p>rtchoke.com 2014</p>
</footer>

<script src="js/jquery-1.9.1.min.js"></script>
<script src="js/bootstrap.min.js"></script>
<script data-main="/js/app" src="/components/requirejs/require.js"></script>
{+js /}
</body>
</html>
